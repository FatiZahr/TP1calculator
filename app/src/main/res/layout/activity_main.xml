<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272223"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <TextView
            android:id="@+id/textView"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:text="Calculatrice"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginLeft="140dp"
            android:layout_weight="0"
            android:contentDescription="Click to perform a specific action"
            app:srcCompat="@drawable/reduice" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:contentDescription="Click to perform a specific action"
            app:srcCompat="@drawable/ajustement" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:contentDescription="Click to perform a specific action"
            app:srcCompat="@drawable/fermer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:text="Standard"
            android:textSize="26sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="335dp"
        android:layout_height="485dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.88">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <Button
                android:id="@+id/button17"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="C"
                android:textSize="24sp"
                android:background="#9c735e" />

            <Button
                android:id="@+id/button18"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="CE"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="x½"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="÷"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/button21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="×"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button25"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button27"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button28"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="-"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/button29"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button30"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="+"
                android:textSize="42sp" />

        </TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/button33"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/button34"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button35"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text=","
                android:textSize="24sp" />

            <Button
                android:id="@+id/button36"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="="
                android:textSize="42sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.686">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>